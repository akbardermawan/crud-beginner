

<div class="container mt-2">
    <div class="row">
      <a href="/contact/add" class="btn btn-success"> Tambah Data</a>
        <div class="col-md-12 text-center">
          <h2> Daftar Contact</h2>
          
          <% if (msg.length !== 0) { %>
            <div class="alert alert-success" role="alert">
              <%= msg %>
            </div>
          <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% contact.forEach((cont, i) => { i++ %>
                  <tr>
                    <th scope="row"><%= i++ %></th>
                    <td><%= cont.nama  %></td>
                    <td><%= cont.nohp  %></td>
                    <td><a href="/contact/<%= cont.nama  %>" class="btn btn-outline-info rounded-pill"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                      </svg> Detail</a> | <a href="/contact/edit/<%= cont.nama %>" class="btn btn-outline-warning rounded-pill">Ubah</a> | <form action="/contact?_method=DELETE" method="post" class="d-inline"><input type="hidden" value="<%= cont.nama %>" name="nama" id="nama"><button type="submit" class="btn btn-danger rounded-pill" onclick="return confirm('Data Akan di Hapus?')">Hapus</button></form></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>

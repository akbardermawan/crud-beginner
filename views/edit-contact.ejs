<div class="container">
  <h2 class="text-center mt-2"> Edit Data</h2>
  <% if (typeof errors != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% errors.forEach(error => { %>
         <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>
    <div class="row mt-3 ">
      
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <form action="/contact?_method=PUT" method="post">
                <input type="hidden" name="_id" value="<%= contact._id %>">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" aria-describedby="emailHelp" name="nama" required value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">No HP</label>
                  <input type="text" class="form-control" id="nohp" name="nohp" required value="<%= contact.nohp %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
                </div>
                
                <button type="submit" class="btn btn-success mt-1">Ubah Data</button>
              </form>
        </div>
    </div>
</div>
